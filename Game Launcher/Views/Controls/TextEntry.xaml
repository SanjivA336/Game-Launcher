<UserControl x:Class="Game_Launcher.Views.TextEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_Launcher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <TextBlock Name="PlaceholderText" Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" VerticalAlignment="Center" Padding="10" Foreground="#555555" />
        <TextBox Name="InputBox" VerticalAlignment="Center" Padding="10" Foreground="White" Background="Transparent" BorderBrush="#1f1f1f" />
        <Button Name="Clear" Content="✖" Width="40" HorizontalAlignment="Right" Foreground="White" Background="Transparent" Click="Clear_Click" />
    </Grid>
</UserControl>
