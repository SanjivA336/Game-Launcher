<UserControl x:Class="Game_Launcher.Views.TextEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_Launcher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <TextBlock Name="Placeholder" Text="Search Library..." Foreground="#555555" VerticalAlignment="Center" Margin="10"/>
        <TextBox Name="Input" VerticalContentAlignment="Center" Foreground="White" Padding="10" Background="Transparent" BorderBrush="#222222" />
        <Button Name="Clear" Content="✖" Width="40" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Foreground="White"/>
    </Grid>
</UserControl>
