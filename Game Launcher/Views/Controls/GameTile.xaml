<UserControl x:Class="Game_Launcher.Views.GameTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_Launcher.Views"
             mc:Ignorable="d" 
             Height="260" Width="220"
             >
    <Grid>
        <Border BorderBrush="#1f1f1f" BorderThickness="1" Background="#222222">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="7*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <!-- Splash Image + Launch Button -->
                <Button Name="Launch" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" BorderThickness="0" Padding="0" Click="Launch_Click">
                    <Image Source="../../Assets/placeholder.png" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                
                <!-- Game Label + Options Button-->
                <Button Name="Options" Grid.Row="1" Padding="5" Background="#333333" BorderThickness="0" Click="Options_Click">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Foreground="White" FontSize="20" FontFamily="Segoe UI Black"/>
                        <TextBlock Grid.Row="1" Text="Last Played: 9/9/9" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Foreground="Gray" FontSize="10" FontFamily="Segoe UI"/>
                    </Grid>
                </Button>

            </Grid>
        </Border>
    </Grid>
</UserControl>
