<Page x:Class="Game_Launcher.Views.Pages.GameOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game_Launcher.Views.Pages"
      xmlns:userControls="clr-namespace:Game_Launcher.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="960"
      Title="GameOptions">
    <Border Grid.Column="0" BorderBrush="#1f1f1f" BorderThickness="0, 0, 1, 0" Padding="10" Background="#0b0b0b" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Label: Game Options -->
            <TextBlock Grid.Row="0" Text="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Foreground="White" FontSize="40" FontFamily="Segoe UI Black"/>

            <!-- Options Content -->
            <Border Grid.Row="1" BorderBrush="#1f1f1f" BorderThickness="0, 1, 0, 0" Background="#0c0c0c" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Button Name="ChangeImage" Click="ChangeImage_Click" BorderThickness="0" Background="Transparent">
                        <Image Source="{Binding CoverImagePath, TargetNullValue='Assets/placeholder.png'}" Width="150" Height="200"/>
                    </Button>


                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>
