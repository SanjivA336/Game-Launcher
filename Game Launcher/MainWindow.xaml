<Window x:Class="Game_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Launcher"
        xmlns:userControls="clr-namespace:Game_Launcher.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200"
        MinHeight="700" MinWidth="1200">
    <Grid Background="#0f0f0f">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MaxWidth="300"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Grid Grid.Column="0" Background="#0b0b0b">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <!-- Label: Sections -->
                <TextBlock Grid.Row="0" Text="Sections" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Foreground="White" FontSize="40" FontFamily="Segoe UI Black"/>

            </Grid>

            <!-- Library -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <!-- Label: Library -->
                <TextBlock Grid.Row="0" Text="Library" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Foreground="White" FontSize="40" FontFamily="Segoe UI Black"/>

                <!-- Search Bar -->
                <userControls:TextEntry Grid.Row="1" Margin="10"/>

                <!-- Game Tiles -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="2*" MaxWidth="300"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" Grid.Row="2" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                        <UniformGrid Name="GameTileGrid" HorizontalAlignment="Stretch" />
                    </ScrollViewer>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
